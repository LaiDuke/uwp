<Page
    x:Class="Lesson1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Lesson1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.TopAppBar>
        <AppBar>
            <StackPanel>
                <AppBarButton Icon="Audio" Name="ClickTop" Click="ClickTop_Click"></AppBarButton>
                <AppBarButton Icon="BrowsePhotos" Name="Scroll" Click="Scroll_Click"></AppBarButton>
                <AppBarButton Icon="Scan" x:Name="ScrollPage" Click="ScrollPage_Click"></AppBarButton>
                <AppBarButton Icon="Save" x:Name="SplitPage" Click="SplitPage_Click"></AppBarButton>
            </StackPanel>
        </AppBar>
    </Page.TopAppBar>
    <Grid>
        <Canvas>
            <Rectangle Canvas.Left="99" Canvas.Top="56" Fill="Black" Height="244" Width="487" RenderTransformOrigin="3.15,2.111">
            </Rectangle>
        </Canvas>

    </Grid>
</Page>
